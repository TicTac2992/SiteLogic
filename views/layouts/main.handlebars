    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/102/three.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.2/TweenMax.min.js"></script>

    <script>

        var scene = new THREE.Scene();

        var camera = new THREE.PerspectiveCamera(
            75,
            window.innerWidth/window.innerHeight,
            0.1,
            1000
        )

        camera.position.z = 5;

        var renderer = new THREE.WebGLRenderer({antialias: true});

        renderer.setClearColor("#e5e5e5");

        renderer.setSize(window.innerWidth,window.innerHeight);

        document.body.appendChild(renderer.domElement);

        window.addEventListener('resize', () => {
            renderer.setSize(window.innerWidth,window.innerHeight);
            camera.aspect = window.innerWidth/window.innerHeight;

            camera.updateProjectionMatrix();
        })

        var raycaster = new THREE.Raycaster();

        var mouse = new THREE.Vector2();

        var geometry = new THREE.IcosahedronGeometry(1, 0);

        var material = new THREE.MeshLambertMaterial({color: 0x0033cc});

        var mesh = new THREE.Mesh(geometry, material);

        mesh.position.x = 4;
        mesh.position.y = 3;
       
        scene.add(mesh);
     
        var mesh2 = new THREE.Mesh(geometry, material);
        mesh2.position.x = 0;
        mesh2.position.y = 0;
        
        scene.add(mesh2);

        var mesh3 = new THREE.Mesh(geometry, material);
        mesh3.position.x = -3;
        mesh3.position.y = -3;
        
        scene.add(mesh3);

        var mesh4 = new THREE.Mesh(geometry, material);
        mesh4.position.x = 5;
        mesh4.position.y = -2;
        
        scene.add(mesh4);

        var mesh5 = new THREE.Mesh(geometry, material);
        mesh5.position.x = -6;
        mesh5.position.y = 2.5;
        
        scene.add(mesh5);
            
        var light = new THREE.PointLight(0xFFFFFF, 1, 1000)
        light.position.set(0,0,0);
        scene.add(light);

        var light = new THREE.PointLight(0xFFFFFF, 2, 1000)
        light.position.set(0,0,25);
        scene.add(light);

        var render = function() {
            requestAnimationFrame(render);

            mesh.rotation.x += .0075;
            mesh.rotation.y += .0075;
            mesh.rotation.z += .0075;

            mesh2.rotation.x += .0075;
            mesh2.rotation.y += .0075;
            mesh2.rotation.z += .0075;

            mesh3.rotation.x += .0075;
            mesh3.rotation.y += .0075;
            mesh3.rotation.z += .0075;

            mesh4.rotation.x += .0075;
            mesh4.rotation.y += .0075;
            mesh4.rotation.z += .0075;

            mesh5.rotation.x += .0075;
            mesh5.rotation.y += .0075;
            mesh5.rotation.z += .0075;
            
            renderer.render(scene, camera);
        }

        
        render();

        
        
        
    </script>
